# =============================================================================
# NONBULLA MULTI-PERSPECTIVE NEWS PLATFORM - ENVIRONMENT CONFIGURATION
# =============================================================================

# --------------------------------
# Core Database Configuration
# --------------------------------
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
DATABASE_URL=postgresql://postgres:password@host:5432/database

# --------------------------------
# AI & Machine Learning APIs
# --------------------------------
# Primary AI Engine for Multi-Perspective Synthesis
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Secondary AI for Image Generation
OPENAI_API_KEY=your_openai_api_key_here

# --------------------------------
# Application Configuration
# --------------------------------
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app
NODE_ENV=production

# --------------------------------
# Security & Authentication
# --------------------------------
# Internal API Security
RSS_API_KEY=your_secure_rss_api_key_here
CRON_SECRET=your_cron_secret_here
WEBHOOK_SECRET=your_webhook_secret_here

# --------------------------------
# RSS & Content Processing
# --------------------------------
RSS_FETCH_INTERVAL=3600000
MAX_ARTICLES_PER_FETCH=50

# --------------------------------
# Cache & Performance (Optional)
# --------------------------------
# Upstash Redis for caching (improves performance)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# Legacy Redis support
REDIS_URL=redis://localhost:6379
REDIS_TOKEN=your_redis_token_here

# --------------------------------
# Monitoring & Observability (Optional)
# --------------------------------
# Error Tracking
SENTRY_DSN=your_sentry_dsn_here

# Performance Monitoring
DATADOG_API_KEY=your_datadog_api_key_here

# Real-time Notifications
REALTIME_WEBHOOK_URLS=https://your-webhook-1.com,https://your-webhook-2.com

# --------------------------------
# Deployment Configuration
# --------------------------------
# Enable verbose logging for debugging
DEBUG=false
LOG_LEVEL=info

# --------------------------------
# Feature Flags
# --------------------------------
# AI Features
ENABLE_AI_SYNTHESIS=true
ENABLE_PERSPECTIVE_ANALYSIS=true
ENABLE_BIAS_DETECTION=true

# Performance Features
ENABLE_CACHING=true
ENABLE_BATCH_PROCESSING=true

# --------------------------------
# Workflow Configuration
# --------------------------------
# Cross-reference requirements
MIN_SOURCES_FOR_SYNTHESIS=2
MAX_SOURCES_PER_CLUSTER=10
CROSS_REFERENCE_DELAY_HOURS=1

# AI Quality thresholds
MIN_CONFIDENCE_FOR_AUTO_PUBLISH=0.8
MIN_CREDIBILITY_SCORE=0.7
REQUIRED_PERSPECTIVE_COUNT=2